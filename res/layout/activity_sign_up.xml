<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lloyd.healthnutritiontool.signUp"
    android:background="#5fb0c9"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="40dp"
    android:padding="20dp"
    android:background="@android:color/white"
    android:elevation="1dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/sign"
        android:textColor="#d67601"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your Barangay"
        android:id="@+id/brgyy"
        android:layout_below="@+id/sign"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:entries="@array/brgy"
        android:background="@drawable/round"
        android:id="@+id/brgy"
        android:layout_below="@+id/brgyy"
        >

    </Spinner>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brgy"
        android:id="@+id/namesss"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="BNS Name"
            android:id="@+id/bnsname"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namesss"
        android:id="@+id/use"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="Username"
            android:id="@+id/usee"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Check"
        android:layout_toRightOf="@+id/use"
        android:layout_below="@+id/namesss"
        android:background="#d67601"
        android:id="@+id/check"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/use"
        android:id="@+id/pass"
        android:hint="Password"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"

            android:inputType="textPassword"
            android:id="@+id/passs"
            />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:id="@+id/pass1"
        android:hint="Confirm Password"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"

            android:inputType="textPassword"
            android:id="@+id/passs1"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/sign_ups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass1"
        android:layout_margin="22dp"
        android:background="#d3d3d3"
        android:enabled="false"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"

        />

</RelativeLayout>
  </ScrollView>

</android.support.constraint.ConstraintLayout>
